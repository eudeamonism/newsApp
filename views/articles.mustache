{{> header}}

<h1>My Articles</h1>

{{> nav}}
<!--The idea is to run it in a loop against the server-->
<div class="list-group">
<!--Because articles comes after res.render('articles', {articles: articles}) it inherits what was accesses in the database we called earlier before rendering. Title is from the database as well as body-->
{{#articles}}
    <a href="#" class="list-group-item list-group-item-action" aria-current="true">
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{title}}</h5>
        </div>
        <p class="mb-1">{{body}}</p>
    </a>
{{/articles}}
</div>




{{> footer}}